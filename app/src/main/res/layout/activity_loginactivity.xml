<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginactivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="255dp"
        android:id="@+id/imgfootar"
        android:src="@drawable/imagefootar" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:layout_marginTop="475dp"
        android:id="@+id/footar"
        android:src="@drawable/footr"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/tvlogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="Login"
        android:textSize="30dp"
        android:textStyle="bold"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="-150dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cv"
            android:layout_marginTop="310dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="70dp"
            app:cardCornerRadius="90dp"
            app:cardElevation="3dp"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/em"
                    android:hint="Email"
                    android:inputType="text"
                    android:layout_margin="10dp"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/user"
                    android:drawablePadding="30dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/view1"
                    android:background="#9454545A"
                    android:layout_below="@+id/em"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/pa"
                    android:layout_below="@+id/view1"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:layout_margin="10dp"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/lock"
                    android:drawablePadding="30dp"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cv"
            android:layout_alignBottom="@+id/cv"
            android:layout_alignRight="@+id/cv"
            android:layout_marginRight="-20dp"
            android:elevation="10dp"
            >

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="350dp"
                android:layout_centerVertical="true"
                android:id="@+id/log1"
                android:background="@drawable/circalebutton"
                android:src="@drawable/arrow"
                />

        </RelativeLayout>



    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registration"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="220dp"
        android:textColor="#009688"
        android:id="@+id/re"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Password ?"
       android:layout_marginTop="525dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/forget"></TextView>


</RelativeLayout>